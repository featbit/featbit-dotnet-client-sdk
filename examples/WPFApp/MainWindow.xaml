<Window x:Class="WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
 
        >
    <!--Loaded="{Binding MainWindowLoadedCommand}"-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Visibility="{Binding WelcomeTextVisibility}" 
                    Text="{Binding WelcomeText}" />
        </Grid>
        <Button Grid.Row="1" Height="30" 
                VerticalAlignment="Center"
                Command="{Binding GetLatestFeatureFlagsValuesCommand}"
                Content="Refresh FeatBit feature flags" />
        <!--Click="Button_Refresh_Click"-->
        <Grid Grid.Row="2">
            <TextBlock 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    x:Name="TextBox_Thanks" Text="Thanks for using FeatBit" />
        </Grid>
    </Grid>
</Window>
